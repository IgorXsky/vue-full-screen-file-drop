{
  "name": "vue-full-screen-file-drop",
  "version": "1.0.0",
  "description": "Vue component for full screen file drop",
  "main": "dist/vue-full-screen-file-drop.js",
  "scripts": {
    "build": "node build/build.js",
    "demo:build": "cd demo && npm install && npm run demo:build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "vue",
    "javascript"
  ],
  "author": "Christian Catalan",
  "license": "MIT",
  "devDependencies": {
    "avoriaz": "^3.6.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-css": "^4.1.7",
    "eslint-config-prettier": "^2.3.0",
    "jest": "^20.0.4",
    "jest-vue-preprocessor": "^1.1.0",
    "rollup": "^0.49.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-vue": "^2.4.1",
    "uglify-js": "^3.0.28",
    "vue": "^2.4.2"
  },
  "jest": {
    "moduleNameMapper": {
      "src/components/([^\\.]*)$": "<rootDir>/src/components/$1.vue",
      "^vue$": "vue/dist/vue.common.js",
      "src/([^\\.]*)$": "<rootDir>/src/$1.vue",
      "(.*)/(.*)$": "$1/$2.vue"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    }
  }
}
